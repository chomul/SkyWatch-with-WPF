<UserControl x:Class="SkyWatch.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SkyWatch.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:WeatherIconConverter x:Key="WeatherIconConverter"/>
        <converters:RatioToWidthConverter x:Key="RatioToWidthConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent">
        <StackPanel Margin="28">

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Top Bar: ê°±ì‹  + ë‹¨ìœ„ ë±ƒì§€              -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,22"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="ðŸ”„ ê°±ì‹ "
                        Command="{Binding RefreshWeatherCommand}"
                        Background="#0FFFFFFF" Foreground="{DynamicResource TextSecondaryBrush}"
                        BorderBrush="#1AFFFFFF" BorderThickness="1"
                        Padding="14,8" FontSize="12" FontFamily="Segoe UI"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10" Padding="{TemplateBinding Padding}"
                                    Cursor="Hand">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Border Background="#404FA3FF" BorderBrush="#664FA3FF" BorderThickness="1"
                        CornerRadius="8" Padding="12,6" Margin="12,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="Â°C" FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBlueBrush}"/>
                </Border>
            </StackPanel>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Hero Weather Card                      -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                    CornerRadius="20" Padding="32" Margin="0,0,0,22">
                <Grid>
                    <!-- ë°°ê²½ ê¸€ë¡œìš° íš¨ê³¼ -->
                    <Ellipse Width="280" Height="280"
                             HorizontalAlignment="Right" VerticalAlignment="Top"
                             Margin="0,-60,-40,0" IsHitTestVisible="False">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#144FA3FF" Offset="0"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ì™¼ìª½: ë„ì‹œ + ì˜¨ë„ -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <!-- ë„ì‹œëª… + êµ­ê°€ ë±ƒì§€ -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="{Binding CurrentWeather.CityName}"
                                           FontSize="22" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="#264FA3FF" BorderBrush="#404FA3FF"
                                        BorderThickness="1" CornerRadius="6"
                                        Padding="8,2" Margin="8,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentWeather.CountryCode}"
                                               FontSize="11" FontWeight="Medium"
                                               Foreground="{DynamicResource AccentBlueBrush}"/>
                                </Border>
                            </StackPanel>

                            <!-- ë‚ ì”¨ ì„¤ëª… -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="{Binding CurrentWeather.IconCode, Converter={StaticResource WeatherIconConverter}}"
                                           FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentWeather.Description}"
                                           FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" Â· ì˜¤ëŠ˜" FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- í° ì˜¨ë„ í‘œì‹œ -->
                            <TextBlock FontSize="80" FontWeight="ExtraLight"
                                       Margin="0,0,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:0}Â°">
                                        <Binding Path="CurrentWeather.Temperature"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#F0F6FF" Offset="0.3"/>
                                        <GradientStop Color="#99F0F6FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>

                            <!-- ìµœê³ /ìµœì €/ì²´ê° -->
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock FontSize="14" FontWeight="Medium" Foreground="#FF8A65">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="â†‘ {0:0}Â°">
                                            <Binding Path="CurrentWeather.TempMax"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="14" FontWeight="Medium"
                                           Foreground="{DynamicResource AccentBlueBrush}" Margin="16,0,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="â†“ {0:0}Â°">
                                            <Binding Path="CurrentWeather.TempMin"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="13" Foreground="{DynamicResource TextMutedBrush}" Margin="16,0,0,0"
                                           VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="ì²´ê° {0:0}Â°">
                                            <Binding Path="CurrentWeather.FeelsLike"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- ì˜¤ë¥¸ìª½: í° ì´ëª¨ì§€ + ê°±ì‹  ì‹œê°„ -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                    HorizontalAlignment="Right" Margin="20,0,0,0">
                            <TextBlock Text="{Binding CurrentWeather.IconCode, Converter={StaticResource WeatherIconConverter}}"
                                       FontSize="90" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentWeather.UpdatedAt, StringFormat='{}{0:HH:mm} ê°±ì‹ '}"
                                       FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Stats Grid (4ì¹¸)                       -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <UniformGrid Columns="4" Margin="0,0,0,22">
                <!-- ìŠµë„ -->
                <Border Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="16" Padding="18" Margin="0,0,7,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’§" FontSize="20" Margin="0,0,0,2"/>
                        <TextBlock Text="ìŠµë„" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CurrentWeather.Humidity}"
                                       FontSize="22" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="%" FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <TextBlock Text="í‰ê·  ì´í•˜" FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- í’ì† -->
                <Border Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="16" Padding="18" Margin="7,0,7,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¨" FontSize="20" Margin="0,0,0,2"/>
                        <TextBlock Text="í’ì†" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CurrentWeather.WindSpeed, StringFormat='{}{0:0.0}'}"
                                       FontSize="22" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="m/s" FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <TextBlock Text="{Binding CurrentWeather.WindDirection}" FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ê°€ì‹œê±°ë¦¬ -->
                <Border Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="16" Padding="18" Margin="7,0,7,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘" FontSize="20" Margin="0,0,0,2"/>
                        <TextBlock Text="ê°€ì‹œê±°ë¦¬" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CurrentWeather.Visibility, StringFormat='{}{0:0}'}"
                                       FontSize="22" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="km" FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                        <TextBlock Text="ë§¤ìš° ì¢‹ìŒ" FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- UV ì§€ìˆ˜ -->
                <Border Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="16" Padding="18" Margin="7,0,0,0">
                    <StackPanel>
                        <TextBlock Text="â˜€ï¸" FontSize="20" Margin="0,0,0,2"/>
                        <TextBlock Text="UV ì§€ìˆ˜" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding CurrentWeather.UvIndex}" FontSize="22" FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentWarmBrush}"/>
                        <TextBlock Text="{Binding CurrentWeather.UvDescription}" FontSize="11"
                                   Foreground="{DynamicResource AccentWarmBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Bottom Row: Hourly + Weekly Forecast   -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="22"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- â”€â”€ ì‹œê°„ë³„ ì˜ˆë³´ â”€â”€ -->
                <Border Grid.Column="0"
                        Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="20" Padding="22">
                    <StackPanel>
                        <!-- ì„¹ì…˜ íƒ€ì´í‹€ -->
                        <DockPanel Margin="0,0,0,18">
                            <TextBlock Text="ì‹œê°„ë³„ ì˜ˆë³´" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       VerticalAlignment="Center"/>
                            <Border Height="1" Background="#0FFFFFFF" Margin="8,0,0,0"
                                    VerticalAlignment="Center"/>
                        </DockPanel>

                        <!-- ì‹œê°„ë³„ ë¦¬ìŠ¤íŠ¸ (ê· ë“± ë°°ì¹˜, ìŠ¤í¬ë¡¤ ì—†ìŒ) -->
                        <ItemsControl ItemsSource="{Binding HourlyForecasts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="hourBorder"
                                            Background="#08FFFFFF"
                                            BorderBrush="#0FFFFFFF" BorderThickness="1"
                                            CornerRadius="14" Padding="10,12"
                                            Margin="0,0,10,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <!-- ì‹œê°„ -->
                                            <TextBlock x:Name="timeText"
                                                       Text="{Binding Time, StringFormat='{}{0:HH}ì‹œ'}"
                                                       FontSize="11" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextMutedBrush}"
                                                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                            <!-- ì•„ì´ì½˜ -->
                                            <TextBlock Text="{Binding IconCode, Converter={StaticResource WeatherIconConverter}}"
                                                       FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                            <!-- ì˜¨ë„ -->
                                            <TextBlock Text="{Binding Temperature, StringFormat='{}{0:0}Â°'}"
                                                       FontSize="14" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                            <!-- ê°•ìˆ˜í™•ë¥  -->
                                            <TextBlock x:Name="rainText"
                                                       Text="{Binding RainChance, StringFormat='{}{0}%'}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource AccentRainBrush}"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <!-- IsNow=trueì¼ ë•Œ í•˜ì´ë¼ì´íŠ¸ -->
                                        <DataTrigger Binding="{Binding IsNow}" Value="True">
                                            <Setter TargetName="hourBorder" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,1">
                                                        <GradientStop Color="#2E4FA3FF" Offset="0"/>
                                                        <GradientStop Color="#1400E5FF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="hourBorder" Property="BorderBrush" Value="#594FA3FF"/>
                                            <Setter TargetName="timeText" Property="Text" Value="ì§€ê¸ˆ"/>
                                            <Setter TargetName="timeText" Property="Foreground"
                                                    Value="{StaticResource AccentCyanBrush}"/>
                                        </DataTrigger>
                                        <!-- ê°•ìˆ˜í™•ë¥  0%ë©´ ìˆ¨ê¹€ -->
                                        <DataTrigger Binding="{Binding RainChance}" Value="0">
                                            <Setter TargetName="rainText" Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- â”€â”€ ì£¼ê°„ ì˜ˆë³´ â”€â”€ -->
                <Border Grid.Column="2"
                        Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                        CornerRadius="20" Padding="22">
                    <StackPanel>
                        <!-- ì„¹ì…˜ íƒ€ì´í‹€ -->
                        <DockPanel Margin="0,0,0,18">
                            <TextBlock Text="ì£¼ê°„ ì˜ˆë³´" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       VerticalAlignment="Center"/>
                            <Border Height="1" Background="#0FFFFFFF" Margin="8,0,0,0"
                                    VerticalAlignment="Center"/>
                        </DockPanel>

                        <!-- ì£¼ê°„ ë¦¬ìŠ¤íŠ¸ -->
                        <ItemsControl ItemsSource="{Binding DailyForecasts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="dayBorder"
                                            Background="#05FFFFFF"
                                            CornerRadius="12" Padding="14,10"
                                            Margin="0,0,0,10"
                                            BorderBrush="Transparent" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="36"/>
                                                <ColumnDefinition Width="28"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="36"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ìš”ì¼ -->
                                            <TextBlock x:Name="dayName"
                                                       Grid.Column="0"
                                                       Text="{Binding DayName}"
                                                       FontSize="13" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <!-- ì•„ì´ì½˜ -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding IconCode, Converter={StaticResource WeatherIconConverter}}"
                                                       FontSize="18" VerticalAlignment="Center"/>

                                            <!-- ì„¤ëª… -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Description}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextMutedBrush}"
                                                       VerticalAlignment="Center" Margin="14,0,0,0"/>

                                            <!-- ê°•ìˆ˜í™•ë¥  -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding RainChance, StringFormat='{}{0}%'}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource AccentRainBrush}"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"/>

                                            <!-- ì˜¨ë„ë°” ì˜ì—­ -->
                                            <StackPanel Grid.Column="4" Orientation="Horizontal"
                                                        VerticalAlignment="Center" Margin="14,0,0,0">
                                                <!-- ìµœì € -->
                                                <TextBlock Text="{Binding TempMin, StringFormat='{}{0:0}Â°'}"
                                                           FontSize="12" Width="28"
                                                           Foreground="{DynamicResource TextMutedBrush}"
                                                           TextAlignment="Right" VerticalAlignment="Center"/>
                                                <!-- ì˜¨ë„ë°” -->
                                                <Border Width="60" Height="5" CornerRadius="3"
                                                        Background="#14FFFFFF" Margin="6,0,6,0"
                                                        VerticalAlignment="Center">
                                                    <Border CornerRadius="3"
                                                            HorizontalAlignment="Left"
                                                            Width="{Binding TempBarRatio, Converter={StaticResource RatioToWidthConverter}, ConverterParameter=60}"
                                                            Height="5">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                <GradientStop Color="#74B9FF" Offset="0"/>
                                                                <GradientStop Color="#FF8A65" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                </Border>
                                                <!-- ìµœê³  -->
                                                <TextBlock Text="{Binding TempMax, StringFormat='{}{0:0}Â°'}"
                                                           FontSize="12" FontWeight="SemiBold" Width="28"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <!-- ì˜¤ëŠ˜ í•˜ì´ë¼ì´íŠ¸ -->
                                        <DataTrigger Binding="{Binding IsToday}" Value="True">
                                            <Setter TargetName="dayBorder" Property="Background" Value="#124FA3FF"/>
                                            <Setter TargetName="dayBorder" Property="BorderBrush" Value="#264FA3FF"/>
                                            <Setter TargetName="dayName" Property="Foreground"
                                                    Value="{StaticResource AccentCyanBrush}"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
