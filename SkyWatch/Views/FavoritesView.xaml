<UserControl x:Class="SkyWatch.Views.FavoritesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SkyWatch.Converters"
             xmlns:services="clr-namespace:SkyWatch.Services"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:WeatherIconConverter x:Key="WeatherIconConverter"/>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="28">
                <!-- 헤더 -->
                <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=[Fav_Title]}"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                <!-- 즐겨찾기 목록 -->
                <ListBox ItemsSource="{Binding FavoriteCities}"
                         SelectedItem="{Binding SelectedCity}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="0,0,0,12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="cityBorder" Background="#0BFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1"
                                    CornerRadius="12" Padding="16" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 왼쪽: 도시명 + 국가 -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding CityName}" FontSize="18" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>

                                        </StackPanel>
                                        <TextBlock Text="{Binding CountryCode}" FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- 중간: 날씨 아이콘 + 온도 -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                                        <TextBlock Text="{Binding IconCode, Converter={StaticResource WeatherIconConverter}}"
                                                   FontSize="28" Foreground="{DynamicResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Temperature, StringFormat='{}{0:0}°'}"
                                                   FontSize="20" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- 활성 도트 -->
                                    <Ellipse x:Name="activeDot" Grid.Column="2"
                                             Width="6" Height="6" Visibility="Collapsed"
                                             VerticalAlignment="Center" Margin="0,0,12,0">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="#00E5FF"/>
                                        </Ellipse.Fill>
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#00E5FF" BlurRadius="6"
                                                              ShadowDepth="0" Opacity="0.6"/>
                                        </Ellipse.Effect>
                                    </Ellipse>

                                    <!-- 오른쪽: 삭제 버튼 -->
                                    <Button Grid.Column="3" 
                                            Command="{Binding DataContext.DeleteFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"
                                            Background="Transparent" BorderThickness="0"
                                            Padding="8" Cursor="Hand">
                                        <TextBlock Text="✕" FontSize="14" Foreground="{DynamicResource TextMutedBrush}"/>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource AccentWarmBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="cityBorder" Property="Background" Value="#12FFFFFF"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter TargetName="cityBorder" Property="Background" Value="#1A4FA3FF"/>
                                    <Setter TargetName="cityBorder" Property="BorderBrush" Value="#404FA3FF"/>
                                    <Setter TargetName="activeDot" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- 빈 목록 안내 -->
                <TextBlock Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=[Fav_Empty]}"
                           FontSize="14" Foreground="{DynamicResource TextMutedBrush}"
                           HorizontalAlignment="Center" Margin="0,48,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FavoriteCities.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
